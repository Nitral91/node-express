<h1>Add new course</h1>

<form action="/add" method="POST">

    <div class="input-field">
        <input id="title" type="text" class="validate" name="Name" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter the name"></span>
    </div>

    <div class="input-field">
        <input id="price" type="number" class="validate" name="Price" required min="1">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>

    <div class="input-field">
        <input id="img" type="text" class="validate" name="Image" required>
        <label for="img">Img url</label>
        <span class="helper-text" data-error="Enter the image url"></span>
    </div>

    <button class="btn btn-primary" type="submit">Add course</button>

</form>