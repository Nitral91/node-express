<h1>Edit {{ course.title }}</h1>

<form action="/courses/edit" method="POST">

    <div class="input-field">
        <input id="title" type="text" class="validate" name="title" required value="{{ course.title }}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter the name"></span>
    </div>

    <div class="input-field">
        <input id="price" type="number" class="validate" name="price" required min="1" value="{{ course.price }}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>

    <div class="input-field">
        <input id="img" type="text" class="validate" name="img" required value="{{ course.img }}">
        <label for="img">Img url</label>
        <span class="helper-text" data-error="Enter the image url"></span>
    </div>

    <input type="hidden" name="id" value="{{ course._id }}">

    <button class="btn btn-primary" type="submit">Edit</button>

</form>

<form action="/courses/delete" method="POST">
<input type="hidden" name="id" value="{{ course._id }}">
    <button class="btn red" type="submit">Delete</button>
</form>